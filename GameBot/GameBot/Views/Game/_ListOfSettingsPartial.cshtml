@model IEnumerable<GameBot.Models.BotViewModel>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartBot)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartBot)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsStarted)
        </td>
        <td>
            @Url.Action("Start", "Bot", Model ) |
            @Html.ActionLink("Stop", "Bot", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
